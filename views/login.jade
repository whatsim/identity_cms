doctype html
html(lang="en")
	include includes/head.jade

	script(src="/scripts/hash.js")
	body
		#wrapper
			canvas#histogram(width="1000px",height="125px")
				img(src="/i/dummy.png")
			include includes/nav.jade
			#content
				.block
					.rule
					.two
						if (message.length)
							.title
								h1
									#{message}
						form.login(action="/login",method="post",onsubmit="hash()")
							input(type="text",size="10",maxlength="40",id="name",name="username",placeholder="username",value="guest")
							input(type="password",size="10",maxlength="16",id="password",name="password",placeholder="password")
							input(type="hidden",name="phash",id="phash",value="")
							- if (redirectURL)
								input(type="hidden",name="url",value="#{redirectURL}")
							input(id="submit",type="submit",value="login")
					.clear